generator client {
  provider = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
}

model Chat {
  id        String    @id @default(cuid())
  userId    String?   // Optional: Can be "whatsapp:+123..." or null for web
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  messages  Message[]
}

model Message {
  id        String   @id @default(cuid())
  chatId    String
  role      String   // "user" or "assistant"
  content   String   @db.Text
  createdAt DateTime @default(now())
  chat      Chat     @relation(fields: [chatId], references: [id], onDelete: Cascade)

  @@index([chatId])
}

model Feedback {
  id        String   @id @default(cuid())
  rating    Int
  comment   String?  @db.Text
  createdAt DateTime @default(now())
}

model TrainingExample {
  id           String   @id @default(cuid())
  userPrompt   String   @db.Text
  aiAnswer     String   @db.Text
  userEdit     String?  @db.Text
  rating       Int?     // 1..5
  createdAt    DateTime @default(now())
  topic        String?
  source       String?  @default("chat")
}
